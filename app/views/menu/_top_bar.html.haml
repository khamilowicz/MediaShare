.top_bar
  - if user_signed_in?
    .session= link_to "Log out", destroy_user_session_path, method: :delete
    .image= image_tag current_user.image
    .name= link_to "Logged as #{current_user.name}", user_path(current_user)
  -else
    .session
      .login= link_to 'Log in', new_user_session_path
      .signup= link_to 'Sign up', new_user_registration_path
      .login_face= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) 
